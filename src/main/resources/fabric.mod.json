{
	"schemaVersion": 1,
	"id": "resourcebarapi",
	"version": "${version}",
	"name": "Resource Bar API",
	"description": "Overhauls the damage calculations and adds elemental damage.",
	"authors": [
		"TheRedBrain"
	],
	"contact": {
		"sources": "https://github.com/TheRedBrain/overhauled-damage"
	},
	"license": "MIT",
	"icon": "assets/resourcebarapi/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"com.github.theredbrain.resourcebarapi.ResourceBarAPI"
		],
		"client": [
			"com.github.theredbrain.resourcebarapi.ResourceBarAPIClient"
		]
	},
	"mixins": [
		"resourcebarapi.mixins.json",
		{
			"config": "resourcebarapi.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"minecraft": "${minecraft_version}",
		"fabricloader": ">=${loader_version}",
		"fabric-api": "*"
	}
}